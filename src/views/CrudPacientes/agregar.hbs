{{#each errors}}
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/each}}
<div class="mx-auto contenedor">
    <form  action="/CrudPacientes/agregar" method="POST">
        <div class="card background">
                <div class="card-header mx-auto letras">
                    <h3>Paciente</h3>
                </div>
                
                <div class="card-body">

                <div class="form-group inputs">
                    <input type="text" name="Nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>

                <div class="form-group inputs">
                    <input type="text" name="Apellido" class="form-control" placeholder="Apellido">
                </div>

                <div class="form-group inputs">
                    <input type="text" name="NSS" class="form-control" placeholder="NSS">
                </div>

                <div class="form-group inputs">
                    <input type="text" name="DNI" class="form-control" placeholder="DNI">
                </div>

                <div class="botton-form">
                    <button class="forma" type="submit">
                        Guardar
                    </button>
                </div>
            </div>
        </div>
